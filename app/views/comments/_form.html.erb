<%= form_for([@article, @article.comments.build], remote: true) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <%= f.hidden_field :commenter, value: current_user.id %>
    <%= f.hidden_field :email, value: current_user.email %>
  <% else %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :leave_a_comment %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" , class:'btn btn-primary' %>
  </div>
<% end %>
