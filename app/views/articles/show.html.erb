<div class="container article-archive">
    <div class="row">
        <div class="col-md-12">
			<% if user_signed_in? %>
				<p class="navbar-text pull-right">
				<%= link_to 'Edit', edit_article_path(@article) %><br>
				<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %>
				</p>
			<% end %>
            <h2 class="article-title"><%= @article.title %></h2>
            Author: <%= @article.user.name %>
            <p>Created at <%= time_ago_in_words(@article.created_at) %></p><br>
            <%= raw(@article.body) %>
            <hr>
            <h3><%= @article.comments.count %> Comments</h3>
            <% @article.comments.each do |comment| %>
            	<div class="well">
            		<h4><%= comment.user.name%></h4><br>
                    <p><%= comment.body %></p>
            		<p><%= time_ago_in_words(comment.created_at) %></p>
            	</div>
            	<br>
            <% end %>
            <%= render 'comments/form' %>
        </div>
    </div>
</div>
